/**index.wxss**/
.item{
  flex-grow:1;
  height: 30%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 96%;
  padding: 0 2%;
}

.login-item{
  width: 90%;
  margin-top: 30rpx;
  border-bottom: 1px solid #eee;
  flex-grow:1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 20rpx;
}


.login-item-info{
  font-size: 12px;
  color: #888;
   padding-bottom: 20rpx;
}

.login-pwd{
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  align-items: center;

}

.login-pwd text{
  height: 100%;
  font-size: 14px;
  color: #888;
  display: flex;

}
.login{
  width: 80%;
  color: white;
  background-color: rgb(87, 86, 86);
  border-radius: 10rpx;
  font-size: 14px;
  margin-top: 200rpx;
}

.register{
  width: 80%;
  color: white;
  background-color: rgb(87, 86, 86);
  border-radius: 10rpx;
  font-size: 14px;
  margin-top: 10rpx;
}

.login-btn:hover{
  width: 80%;
  color: white;
  border-radius: 0;
}
.logo{
  width: 600rpx;
}
